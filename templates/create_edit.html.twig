{% extends "base.html.twig" %}


{% block body %}
    <div class="container">
        {% if info is not empty %}
        <div class="alert alert-info">{{ info }}</div>
        {% endif %}

        {{ form_start(bookForm) }}

        <table class="table table-borderless">
            <tbody>
            <tr>
                <td colspan="3">{{ form_row(bookForm.title) }}</td>
            </tr>
            <tr>
                <td colspan="3">{{ form_row(bookForm.isbn) }}</td>
            </tr>
            <tr>
                <td colspan="3">{{ form_row(bookForm.author) }}</td>
            </tr>
            <tr>
                <td colspan="3">{{ form_row(bookForm.borrowed) }}</td>
            </tr>
            <tr>
                {% if edit %}
                <td><button type="submit" class="btn btn-success" ><i class='fas fa-save'></i> {% trans %}book.save{% endtrans %}</button></td>
                {% else %}
                <td><button type="submit" class="btn btn-primary" ><i class='fas fa-plus-square'></i> {% trans %}book.add{% endtrans %}</button></td>
                {% endif %}
                <td><button type="button" class="btn btn-secondary" onclick="getDataByIsbn()"><i class='fas fa-search'></i> {% trans %}book.details.by.isbn{% endtrans %}</button></td>
                <td><button type="button" class="btn btn-secondary" onclick="getDataByTitle()"><i class='fas fa-search'></i> {% trans %}book.details.by.title{% endtrans %}</button></td>
            </tr>
            </tbody>
        </table>

        {{ form_end(bookForm) }}

        <div id="modal-box"></div>
    </div>
{% endblock %}