{% extends "base.html.twig" %}

{% block title %}{{ book.title }}{% endblock %}


{% block body %}
    <div class="container">
        <h2>{{ book.title }}</h2>
        <table class="table table-striped">
            <tbody>
            <tr>
                <td>{% trans %}book.title{% endtrans %}</td>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <td>{% trans %}book.isbn{% endtrans %}</td>
                <td>{{ book.isbn }}</td>
            </tr>
            <tr>
                <td>{% trans %}book.author{% endtrans %}</td>
                <td>{{ book.author }}</td>
            </tr>
            <tr>
                <td>{% trans %}book.borrowed.title{% endtrans %}</td>
                <td>
                    {% if book.borrowed %}
                        {% trans %}book.borrowed.yes{% endtrans %}
                    {% else %}
                        {% trans %}book.borrowed.no{% endtrans %}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <a class="btn btn-success" href="{{ path('app_book_edit', {isbn: book.isbn}) }}"><i class="fas fa-pen"></i> {% trans %}edit{% endtrans %}</a>
                    <button class="btn btn-danger" data-toggle="modal" data-target="#delete-book"><i class="fas fa-trash-alt"></i> {% trans %}delete{% endtrans %}</button>
                </td>
            </tr>
            </tbody>
        </table>
    </div>

    <div id="modal-box">
        <div class="modal" id="delete-book">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-header">
                        <h4 class="modal-title">{% trans %}delete{% endtrans %}</h4>
                        <button type="button" class="close" data-dismiss="modal"><i class="fas fa-times"></i></button>
                    </div>

                    <div class="modal-body">
                        {% trans %}book.should_be_deleted{% endtrans %}<br>
                        {{ book.title }}
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" onclick="delBook({{ book.isbn }})"><i class="fas fa-trash-alt"></i> {% trans %}delete{% endtrans %}</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times"></i> {% trans %}cancel{% endtrans %}</button>
                    </div>

                </div>
            </div>
        </div>

    </div>
{% endblock %}