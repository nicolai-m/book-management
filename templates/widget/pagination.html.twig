<nav aria-label="Page navigation">
    <ul class="pagination">
        {% if totalEntries is defined  %}
            <li class="page-item"><a class="page-link" href="/home/1"><i class='fas fa-angle-double-left'></i>&nbsp;{% trans %}firstPage{% endtrans %}</a></li>
        {% endif %}
        {% for page in pagination.preLinks %}
            <li class="page-item"><a class="page-link" href="/home/{{ page }}">{{ page }}</a></li>
        {% endfor %}
        <li class="page-item active"><a class="page-link" href="/home/{{ pagination.currentPage }}">{{ pagination.currentPage }}</a></li>
        {% for page in pagination.nextLinks %}
            <li class="page-item"><a class="page-link" href="/home/{{ page }}">{{ page }}</a></li>
        {% endfor %}
        {% if totalEntries is defined  %}
        <li class="page-item"><a class="page-link" href="/home/{{ totalEntries }}">{% trans %}lastPage{% endtrans %}&nbsp;<i class='fas fa-angle-double-right'></i></a></li>
        {% endif %}
    </ul>
</nav>