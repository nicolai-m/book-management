<table class="table table-striped">
    {% if isAutocomplete == false %}
    <thead class="thead-dark">
    <tr>
        <th class="thead-dark">{% trans %}book.title{% endtrans %}</th>
        <th class="thead-dark">{% trans %}book.isbn{% endtrans %}</th>
        <th class="thead-dark">{% trans %}book.borrowed.title{% endtrans %}</th>
    </tr>
    </thead>
    {% endif %}
    <tbody>
    {% for book in books %}
        <tr>
            <td><a href="{{ path('app_book', {isbn: book.isbn}) }}">{{ book.title }}</a></td>
            <td><a href="{{ path('app_book', {isbn: book.isbn}) }}">{{ book.isbn }}</a></td>
            {% if isAutocomplete == false %}
            <td>
                {% if book.borrowed %}
                    {% trans %}book.borrowed.yes{% endtrans %}
                {% else %}
                    {% trans %}book.borrowed.no{% endtrans %}
                {% endif %}
            </td>
            {% endif %}
        </tr>
    {% endfor %}
    </tbody>
</table>